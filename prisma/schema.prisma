generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model card {
  id       String     @id
  title    String     @unique(map: "Card_title_key")
  body     String     @db.Text
  price    String
  amount   String
  image    String?
  shopitem shopitem[]
}

model shopitem {
  id     String @id
  userId String
  cardId String
  amount String
  card   card   @relation(fields: [cardId], references: [id], onDelete: Cascade)
  user   user   @relation(fields: [userId], references: [id])

  @@index([cardId], map: "shopitem_cardId_fkey")
  @@index([userId], map: "shopitem_userId_fkey")
}

model user {
  id        String     @id
  name      String?
  email     String     @unique(map: "email")
  password  String?
  role      user_role  @default(USER)
  createdAt DateTime   @default(now())
  updatedAt DateTime
  shopitem  shopitem[]
}

enum user_role {
  USER
  ADMIN
}
